<%- include('./partials/header') %>
<%- include('./partials/main_nav') %>

<div class="container mt-5">

  
  <div class="text-center mb-4">
    <img src="/Asset/images/logo.PNG" alt="Logo" style="height: 90px; width:auto;" class="mb-3">
    <h1 class="display-4 fw-bold">PlanSimple</h1>
    <p class="lead text-muted">Your daily planning made simple, organized, and productive.</p>
  </div>

  <!--HERO-->
  <div class="text-center mb-5">
    <h2 class="fw-semibold">Organize Your Day With Ease</h2>
    <p class="text-muted mb-4">
      Create tasks, manage your schedule, and stay productive throughout the week.
    </p>

    <!--BUTTON -->
    <div id="hero-button-placeholder" class="mt-5 text-center">
      <a href="/schedule" class="btn btn-primary btn-lg px-5 hero-btn">
      Start Planning Now
      </a>
    </div>
  </div>

  <div id="hero-button-placeholder" class="col-md-5 mx-auto mb-2">
  <a href="#" class="btn btn-primary btn-lg  text-center hero-btn"
     data-bs-toggle="modal" data-bs-target="#createTaskModal">
    <i class="fa-solid fa-plus"></i> Create Task
  </a>
  <a href="/schedule" class="btn btn-outline-secondary btn-lg px-4 ms-2 hero-btn">
    <i class="fa-regular fa-calendar"></i> View Schedule
  </a>
</div>


  <div class="row g-4">

    <div class="col-md-4">
      <div class="card shadow-sm h-100 text-center p-3">
        <h4 class="fw-bold">Add Tasks</h4>
        <p class="text-muted">Create tasks with time, color, and descriptions.</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm h-100 text-center p-3">
        <h4 class="fw-bold">Weekly Overview</h4>
        <p class="text-muted">View all tasks for the day or week in a clean layout.</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm h-100 text-center p-3">
        <h4 class="fw-bold">Stay Organized</h4>
        <p class="text-muted">PlanSimple keeps your schedule clear and structured.</p>
      </div>
    </div>

  </div>
  <!-- Create Task modal -->
<div class="modal fade" id="createTaskModal" tabindex="-1" aria-labelledby="createTaskLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createTaskLabel">Create a Task</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form id="taskForm">
        <div class="modal-body">
          <div class="mb-3">
            <label for="taskTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="taskTitle" name="title" required>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="taskDate" class="form-label">Date</label>
              <input type="date" class="form-control" id="taskDate" name="date" required>
            </div>
            <div class="col-md-3.3 mb-3.3">
              <label for="startTime" class="form-label">Start</label>
              <input type="time" class="form-control" id="startTime" name="start">
            </div>
            <div class="col-md-3.3 mb-3.3">
              <label for="endTime" class="form-label">End</label>
              <input type="time" class="form-control" id="endTime" name="end">
            </div>
          </div>
          <div class="mb-3">
            <label for="color" class="form-label">Color</label>
            <input type="color" class="form-control form-control-color" id="color" name="color" value="#008000" title="Choose your color">  

          <div class="mb-3">
            <label for="notes" class="form-label">Notes</label>
            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk"></i> Save Task
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


</div>

<%- include('./partials/footer') %>
